<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.labcrp.MainActivity" >
    
	
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <TextView 
            android:text="@string/win"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/winTimes"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="2"
            />
        <TextView 
            android:text="@string/lose"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/loseTimes"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="2"
            />
        <TextView 
            android:text="@string/tie"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/tieTimes"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
    </LinearLayout>
	    
    <TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:stretchColumns="0,1"
        >
        <TableRow >
            
        </TableRow>
        <TableRow >
        </TableRow>
    </TableLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageButton 
            android:id="@+id/paper"
            android:background="@drawable/paper"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
        <ImageButton 
            android:id="@+id/scissor"
            android:background="@drawable/scissors"
            android:layout_height="wrap_content"
            android:layout_width="0sp" 
            android:layout_weight="1"
            />
        <ImageButton 
            android:id="@+id/stone"
            android:background="@drawable/stone"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
    </LinearLayout>
    
    
</LinearLayout>
