<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.labcrp.MainActivity" >
    
	
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <TextView 
            android:text="@string/win"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/winTimes"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="2"
            />
        <TextView 
            android:text="@string/lose"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/loseTimes"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="2"
            />
        <TextView 
            android:text="@string/tie"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
        <TextView 
            android:id="@+id/tieTimes"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
    </LinearLayout>
    
    <FrameLayout
        android:layout_width="fill_parent"
	    android:layout_height="0sp"
	    android:layout_weight="1"
	    >
	    <TextView 
	        android:id="@+id/txv_battleResult"
	        android:text=""
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textSize="40sp"
	        />
	    </FrameLayout>
	    
    <TableLayout 
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:stretchColumns="0,1"
        >
        <TableRow >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_choice"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/coms_choice"
                />
            
        </TableRow>
        <TableRow >
	        <ImageView 
	            android:id="@+id/urA"
	            android:src="@drawable/a1"
	            android:layout_gravity="left"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:rotation="90"
	            />
	        <ImageView 
	            android:id="@+id/comA"
	            android:src="@drawable/a3"
	            android:layout_gravity="end"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:rotation="270"
	            />
        </TableRow>
    </TableLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageButton 
            android:id="@+id/paper"
            android:src="@drawable/paper"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
        <ImageButton 
            android:id="@+id/scissor"
            android:src="@drawable/scissors"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
        <ImageButton 
            android:id="@+id/stone"
            android:src="@drawable/stone"
            android:layout_height="wrap_content"
            android:layout_width="0sp"
            android:layout_weight="1"
            />
    </LinearLayout>
    
    
</LinearLayout>
